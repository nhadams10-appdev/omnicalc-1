<h1>Payment Results</h1>

<dl>
  <dt>APR</dt>
  <dd><%= number_to_percentage(@apr, precision:4) %></dd>

  <dt>Number of years</dt>
  <dd><%= (@n/12).to_i %></dd>
  
  <dt>Principal</dt>
  <dd><%= number_to_currency(@pv) %></dd>
  
  <dt>Payment</dt>
  <dd><%= number_to_currency(@p) %></dd>

</dl>

